# ===========================================
# ODDSTRACKER - Configuration
# ===========================================

# Base de données (SQLite local ou PostgreSQL)
# Option 1: SQLite (simple, local)
DATABASE_URL="file:./dev.db"

# Option 2: PostgreSQL (production)
# DATABASE_URL="postgresql://user:password@localhost:5432/oddstracker"

# ===========================================
# API OddsPapi
# ===========================================
# Récupère ta clé sur https://oddspapi.io
ODDSPAPI_API_KEY="your_api_key_here"
ODDSPAPI_BASE_URL="https://api.oddspapi.io"

# ===========================================
# Application
# ===========================================
# Mot de passe pour accéder à l'app (sera hashé)
APP_PASSWORD="changeme123"

# Secret pour les sessions
NEXTAUTH_SECRET="change-this-to-a-random-string-at-least-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# ===========================================
# Options de sync
# ===========================================
# Délai entre requêtes API (ms) - respecter rate limit
API_RATE_LIMIT_MS=1000

# Nombre max de requêtes par session de sync
MAX_REQUESTS_PER_SYNC=100
